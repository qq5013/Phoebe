@model int?

<select id="BillingType" name="BillingType" class="form-control">
    <option value="">-- 请选择 --</option>
    @foreach (BillingType o in Enum.GetValues(typeof(BillingType)))
    {
        <option value="@Convert.ToInt32(o)" @(Model == (int)o ? "selected='selected'" : "")>@o.DisplayName()</option>
    }
</select>

