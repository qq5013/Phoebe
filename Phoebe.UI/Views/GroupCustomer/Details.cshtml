@model Phoebe.Model.GroupCustomer

@{
    ViewBag.Title = "团体客户信息";
    List<Contract> contracts = ViewBag.Contracts;
    List<Cargo> cargos = ViewBag.Cargos;
    List<Stock> stocks = ViewBag.Stocks;
}

<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    @ViewBag.Title
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">主页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">客户管理</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">@ViewBag.Title</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#tab_info" data-toggle="tab">
                    团体客户信息
                </a>
            </li>
            <li>
                <a href="#tab_contract" data-toggle="tab">
                    相关合同
                </a>
            </li>
            <li>
                <a href="#tab_cargo" data-toggle="tab">
                    相关货品
                </a>
            </li>
            <li>
                <a href="#tab_stock" data-toggle="tab">
                    在库信息
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade active in" id="tab_info">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th style="width: 20%;">
                                属性
                            </th>
                            <th>
                                说明
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Name)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Address)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Code)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.LegalRepresentative)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.LegalRepresentative)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Captain)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Captain)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.CaptainTelephone)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.CaptainTelephone)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Contact)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Contact)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.ContactTelephone)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.ContactTelephone)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Remark)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Remark)
                            </td>
                        </tr>
                    </tbody>
                </table>

                <hr />
                <p>
                    <a href="@Url.Action("Index", new { controller = "GroupCustomer" })" class="btn btn-info"><i class="fa fa-list"></i>&nbsp;回到列表</a>
                    <a href="@Url.Action("Edit", new { controller = "GroupCustomer", id = Model.ID })" class="btn btn-warning"><i class="fa fa-edit"></i>&nbsp;编辑</a>
                </p>
            </div>
            <div class="tab-pane fade" id="tab_contract">
                <table class="table table-striped table-bordered table-hover" id="contract-table">
                    <thead>
                        <tr>
                            <th>
                                合同编号
                            </th>
                            <th>
                                合同名称
                            </th>
                            <th>
                                签订日期
                            </th>
                            <th>
                                状态
                            </th>
                            <th>
                                操作
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                合同编号
                            </th>
                            <th>
                                合同名称
                            </th>
                            <th>
                                签订日期
                            </th>
                            <th>
                                状态
                            </th>
                            <th>
                                操作
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in contracts)
                        {
                            <tr>
                                <td>
                                    @item.Number
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.SignDate.ToDateString()
                                </td>
                                <td>
                                    @(((EntityStatus)item.Status).DisplayName())
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-info" href="/Contract/DetailsModal/@item.ID" data-target="#contract-modal" data-toggle="modal"><i class="fa fa-check-circle"></i>&nbsp;查看</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="modal fade" id="contract-modal" role="basic" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                                <img src="/assets/global/img/loading-spinner-grey.gif" alt="" class="loading">
                                <span>
                                    &nbsp;&nbsp;Loading...
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="tab_cargo">
                <table class="table table-striped table-bordered table-hover" id="cargo-table">
                    <thead>
                        <tr>
                            <th>
                                货品名称
                            </th>
                            <th>
                                所属合同
                            </th>
                            <th>
                                一级分类
                            </th>
                            <th>
                                二级分类
                            </th>
                            <th>
                                数量
                            </th>
                            <th>
                                总重量 (t)
                            </th>
                            <th>
                                总体积 (m<sup>3</sup>)
                            </th>
                            <th>
                                在库数量
                            </th>
                            <th>
                                登记时间
                            </th>
                            <th>
                                状态
                            </th>
                            <th>
                                操作
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                货品名称
                            </th>
                            <th>
                                所属合同
                            </th>
                            <th data-filter="true">
                                一级分类
                            </th>
                            <th data-filter="true">
                                二级分类
                            </th>
                            <th>
                                数量
                            </th>
                            <th>
                                总重量 (t)
                            </th>
                            <th>
                                总体积 (m<sup>3</sup>)
                            </th>
                            <th>
                                在库数量
                            </th>
                            <th>
                                登记时间
                            </th>
                            <th data-filter="true">
                                状态
                            </th>
                            <th>
                                操作
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in cargos)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Contract.Name
                                </td>
                                <td>
                                    @item.FirstCategory.Name
                                </td>
                                <td>
                                    @item.SecondCategory.Name
                                </td>
                                <td>
                                    @item.Count
                                </td>
                                <td>
                                    @item.TotalWeight
                                </td>
                                <td>
                                    @item.TotalVolume
                                </td>
                                <td>
                                    @item.StoreCount
                                </td>
                                <td>
                                    @item.RegisterTime.ToDateString()
                                </td>
                                <td>
                                    @(((EntityStatus)item.Status).DisplayName())
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-info" href="/Cargo/DetailsModal/@item.ID.ToString()" data-target="#cargo-modal" data-toggle="modal"><i class="fa fa-check-circle"></i>&nbsp;查看</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="modal fade" id="cargo-modal" role="basic" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                                <img src="/assets/global/img/loading-spinner-grey.gif" alt="" class="loading">
                                <span>
                                    &nbsp;&nbsp;Loading...
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="tab_stock">
                <table class="table table-striped table-bordered table-hover" id="stock-table">
                    <thead>
                        <tr>
                            <th>
                                仓位
                            </th>
                            <th>
                                货品名称
                            </th>
                            <th>
                                数量
                            </th>
                            <th>
                                入库时间
                            </th>
                            <th>
                                操作
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                仓位
                            </th>
                            <th>
                                货品名称
                            </th>
                            <th>
                                数量
                            </th>
                            <th>
                                入库时间
                            </th>
                            <th>
                                操作
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in stocks)
                        {
                            <tr>
                                <td>
                                    @item.Warehouse.Number
                                </td>
                                <td>
                                    @item.Cargo.Name
                                </td>
                                <td>
                                    @item.Count
                                </td>
                                <td>
                                    @item.InTime.ToDateTimeString()
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-info" href="/Stock/DetailsModal/@item.ID.ToString()" data-target="#stock-modal" data-toggle="modal"><i class="fa fa-check-circle"></i>&nbsp;查看</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="modal fade" id="stock-modal" role="basic" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                                <img src="/assets/global/img/loading-spinner-grey.gif" alt="" class="loading">
                                <span>
                                    &nbsp;&nbsp;Loading...
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>
<!-- END PAGE CONTENT-->


@section Scripts {
    <script type="text/javascript">
        $(function () {
            phoebe.leftNavActive($('#menu-group-customer-index'));
            phoebe.initDatatable($('#contract-table'));
            phoebe.initDatatable($('#cargo-table'));
            phoebe.initDatatable($('#stock-table'));
        });
    </script>
}
