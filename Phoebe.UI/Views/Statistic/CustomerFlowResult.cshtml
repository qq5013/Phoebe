@model IEnumerable<Phoebe.Model.StockFlow>

@{ 
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>&nbsp;客户流水数据
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="flow-table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FlowDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CargoName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstCategoryName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SecondCategoryName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ThirdCategoryName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Type)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Count)
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FlowDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CargoName)
                            </th>
                            <th data-filter="true">
                                @Html.DisplayNameFor(model => model.FirstCategoryName)
                            </th>
                            <th data-filter="true">
                                @Html.DisplayNameFor(model => model.SecondCategoryName)
                            </th>
                            <th data-filter="true">
                                @Html.DisplayNameFor(model => model.ThirdCategoryName)
                            </th>
                            <th data-filter="true">
                                @Html.DisplayNameFor(model => model.Type)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Count)
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FlowDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CargoName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstCategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SecondCategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ThirdCategoryName)
                                </td>
                                <td>
                                    @{
                                        StockFlowType type = (StockFlowType)item.Type;
                                        @type.DisplayName()
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Count)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <hr />
                <h3>汇总</h3>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                类型
                            </th>
                            <th>
                                数量
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                入库
                            </td>
                            <td>
                                @Model.Where(r => r.Type == StockFlowType.StockIn).Sum(r => r.Count)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                出库
                            </td>
                            <td>
                                @Model.Where(r => r.Type == StockFlowType.StockOut).Sum(r => r.Count)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                转入
                            </td>
                            <td>
                                @Model.Where(r => r.Type == StockFlowType.TransferIn).Sum(r => r.Count)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                转出
                            </td>
                            <td>
                                @Model.Where(r => r.Type == StockFlowType.TransferOut).Sum(r => r.Count)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        phoebe.initDatatable($('#flow-table'));
    });
</script>