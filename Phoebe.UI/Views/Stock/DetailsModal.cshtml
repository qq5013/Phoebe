@model Phoebe.Model.Stock

@{ 
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">库存信息</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th style="width: 20%;">
                            属性
                        </th>
                        <th>
                            说明
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.WarehouseID)
                        </td>
                        <td>
                            @Model.Warehouse.Name
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.TrayID)
                        </td>
                        <td>
                            @Model.TrayID.ToString().PadLeft(6, '0')
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.CargoID)
                        </td>
                        <td>
                            @Model.Cargo.Name
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.InTime)
                        </td>
                        <td>
                            @Model.InTime.ToDateTimeString()
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.OutTime)
                        </td>
                        <td>
                            @Model.OutTime.ToDateTimeString()
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Source)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Source)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Destination)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Destination)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.StockInID)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.StockInID)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.StockOutID)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.StockOutID)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.StockMoveID)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.StockMoveID)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Remark)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Remark)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Status)
                        </td>
                        <td>
                            @(((EntityStatus)Model.Status).DisplayName())
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn blue" data-dismiss="modal">关闭</button>
</div>

