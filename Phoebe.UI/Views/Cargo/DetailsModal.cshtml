@model Phoebe.Model.Cargo

@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">货品信息</h4>
</div>
<div class="modal-body">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th style="width: 20%;">
                    属性
                </th>
                <th>
                    说明
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.ID)
                </td>
                <td>
                    @Html.DisplayFor(model => model.ID)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Name)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.FirstCategoryID)
                </td>
                <td>
                    @Model.FirstCategory.Name
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.SecondCategoryID)
                </td>
                <td>
                    @Model.SecondCategory.Name
                </td>
            </tr>
            <tr>
                <td>
                    总重量 (t)
                </td>
                <td>
                    @Html.DisplayFor(model => model.TotalWeight)
                </td>
            </tr>
            <tr>
                <td>
                    总体积 (m<sup>3</sup>)
                </td>
                <td>
                    @Html.DisplayFor(model => model.TotalVolume)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.OriginPlace)
                </td>
                <td>
                    @Html.DisplayFor(model => model.OriginPlace)
                </td>
            </tr>
            <tr>
                <td>
                    保质期(月)
                </td>
                <td>
                    @Html.DisplayFor(model => model.ShelfLife)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.ContractID)
                </td>
                <td>
                    @Model.Contract.Name
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.RegisterTime)
                </td>
                <td>
                    @Model.RegisterTime.ToDateTimeString()
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.UserID)
                </td>
                <td>
                    @Model.User.Name
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.InTime)
                </td>
                <td>
                    @Model.InTime.ToDateTimeString()
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.OutTime)
                </td>
                <td>
                    @Model.OutTime.ToDateTimeString()
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Remark)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Remark)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Status)
                </td>
                <td>
                    @(((EntityStatus)Model.Status).DisplayName())
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn blue" data-dismiss="modal">关闭</button>
</div>
