@model Phoebe.Model.Cargo

@{
    ViewBag.Title = "货品信息";
}

<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    @ViewBag.Title
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">主页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">货品管理</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">@ViewBag.Title</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#tab_info" data-toggle="tab">
                    货品信息
                </a>
            </li>
            <li>
                <a href="#tab_store" data-toggle="tab">
                    库存记录
                </a>
            </li>
            <li>
                <a href="#tab_stockin" data-toggle="tab">
                    入库记录
                </a>
            </li>
            <li>
                <a href="#tab_stockout" data-toggle="tab">
                    出库记录
                </a>
            </li>
            <li>
                <a href="#tab_stockmove" data-toggle="tab">
                    移库记录
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade active in" id="tab_info">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th style="width: 20%;">
                                属性
                            </th>
                            <th>
                                说明
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.ID)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Name)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.FirstCategoryID)
                            </td>
                            <td>
                                @Model.FirstCategory.Name
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.SecondCategoryID)
                            </td>
                            <td>
                                @Model.SecondCategory.Name
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.ThirdCategoryID)
                            </td>
                            <td>
                                @if (Model.ThirdCategory != null)
                                {
                                    @Model.ThirdCategory.Name
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Count)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Count)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                单位重量 (Kg)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.UnitWeight)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                总重量 (t)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.TotalWeight)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                单位体积 (m<sup>3</sup>)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.UnitVolume)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                总体积 (m<sup>3</sup>)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.TotalVolume)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.OriginPlace)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.OriginPlace)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                保质期(月)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.ShelfLife)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.ContractID)
                            </td>
                            <td>
                                @Model.Contract.Name
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.RegisterTime)
                            </td>
                            <td>
                                @Model.RegisterTime.ToDateTimeString()
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.UserID)
                            </td>
                            <td>
                                @Model.User.Name
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.InTime)
                            </td>
                            <td>
                                @Model.InTime.ToDateTimeString()
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.OutTime)
                            </td>
                            <td>
                                @Model.OutTime.ToDateTimeString()
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Remark)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Remark)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Status)
                            </td>
                            <td>
                                @(((EntityStatus)Model.Status).DisplayName())
                            </td>
                        </tr>
                    </tbody>
                </table>

                <hr />
                <p>
                    <a href="@Url.Action("Index", new { controller = "Cargo" })" class="btn btn-info"><i class="fa fa-list"></i>&nbsp;回到列表</a>
                </p>
            </div>

            <div class="tab-pane fade" id="tab_store">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                库位编号
                            </th>
                            <th>
                                在库数量
                            </th>
                            <th>
                                入库时间
                            </th>
                            <th>
                                出库时间
                            </th>
                            <th>
                                来源
                            </th>
                            <th>
                                备注
                            </th>
                            <th>
                                状态
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                库位编号
                            </th>
                            <th>
                                在库数量
                            </th>
                            <th>
                                入库时间
                            </th>
                            <th>
                                出库时间
                            </th>
                            <th>
                                来源
                            </th>
                            <th>
                                备注
                            </th>
                            <th>
                                状态
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.Stocks)
                        {
                            <tr>
                                <td>
                                    @item.Warehouse.Number
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Count)
                                </td>
                                <td>
                                    @item.InTime.ToDateTimeString()
                                </td>
                                <td>
                                    @item.OutTime.ToDateTimeString()
                                </td>
                                <td>
                                    @if (item.Source == 0)
                                    {
                                        <span>入库</span>
                                    }
                                    else
                                    {
                                        <span>移库</span>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Remark)
                                </td>
                                <td>
                                    @(((EntityStatus)item.Status).DisplayName())
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="tab-pane fade" id="tab_stockin">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                入库时间
                            </th>
                            <th>
                                确认时间
                            </th>
                            <th>
                                仓位
                            </th>
                            <th>
                                入库数量
                            </th>
                            <th>
                                操作人
                            </th>
                            <th>
                                状态
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                入库时间
                            </th>
                            <th>
                                确认时间
                            </th>
                            <th>
                                仓位
                            </th>
                            <th>
                                入库数量
                            </th>
                            <th>
                                操作人
                            </th>
                            <th>
                                状态
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach(var item in Model.StockInDetails.OrderBy(r => r.StockIn.ConfirmTime))
                        {
                            <tr>
                                <td>
                                    @item.StockIn.InTime.ToDateTimeString()
                                </td>
                                <td>
                                    @item.StockIn.ConfirmTime.ToDateTimeString()
                                </td>
                                <td>
                                    @item.Warehouse.Number
                                </td>
                                <td>
                                    @item.Count
                                </td>
                                <td>
                                    @item.StockIn.User.Name
                                </td>
                                <td>
                                    @(((EntityStatus)item.Status).DisplayName())
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="tab-pane fade" id="tab_stockout">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                出库时间
                            </th>
                            <th>
                                确认时间
                            </th>
                            <th>
                                仓位
                            </th>
                            <th>
                                在库数量
                            </th>
                            <th>
                                出库数量
                            </th>
                            <th>
                                操作人
                            </th>
                            <th>
                                状态
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                出库时间
                            </th>
                            <th>
                                确认时间
                            </th>
                            <th>
                                仓位
                            </th>
                            <th>
                                在库数量
                            </th>
                            <th>
                                出库数量
                            </th>
                            <th>
                                操作人
                            </th>
                            <th>
                                状态
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.StockOutDetails.OrderBy(r => r.StockOut.ConfirmTime))
                        {
                            <tr>
                                <td>
                                    @item.StockOut.OutTime.ToDateTimeString()
                                </td>
                                <td>
                                    @item.StockOut.ConfirmTime.ToDateTimeString()
                                </td>
                                <td>
                                    @item.Warehouse.Number
                                </td>
                                <td>
                                    @item.StoreCount
                                </td>
                                <td>
                                    @item.Count
                                </td>
                                <td>
                                    @item.StockOut.User.Name
                                </td>
                                <td>
                                    @(((EntityStatus)item.Status).DisplayName())
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="tab-pane fade" id="tab_stockmove">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                移库时间
                            </th>
                            <th>
                                确认时间
                            </th>
                            <th>
                                源仓位
                            </th>
                            <th>
                                目的仓库
                            </th>
                            <th>
                                移库数量
                            </th>
                            <th>
                                操作人
                            </th>
                            <th>
                                状态
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                移库时间
                            </th>
                            <th>
                                确认时间
                            </th>
                            <th>
                                源仓位
                            </th>
                            <th>
                                目的仓库
                            </th>
                            <th>
                                移库数量
                            </th>
                            <th>
                                操作人
                            </th>
                            <th>
                                状态
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.StockMoveDetails.OrderBy(r => r.StockMove.ConfirmTime))
                        {
                            <tr>
                                <td>
                                    @item.StockMove.MoveTime.ToDateTimeString()
                                </td>
                                <td>
                                    @item.StockMove.ConfirmTime.ToDateTimeString()
                                </td>
                                <td>
                                    @item.SourceWarehouse.Number
                                </td>
                                <td>
                                    @item.DestinationWarehouse.Number
                                </td>
                                <td>
                                    @item.Count
                                </td>
                                <td>
                                    @item.StockMove.User.Name
                                </td>
                                <td>
                                    @(((EntityStatus)item.Status).DisplayName())
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT-->

@section Scripts {
    <script type="text/javascript">
        $(function () {
            phoebe.leftNavActive($('#menu-cargo-index'));
        });
    </script>
}
