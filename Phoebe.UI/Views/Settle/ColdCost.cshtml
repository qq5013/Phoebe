@model Phoebe.UI.Models.ColdCost

@{
    ViewBag.Title = "冷藏费计算";

    AjaxOptions ajaxOpts = new AjaxOptions
    {
        UpdateTargetId = "process-result",
        Url = Url.Action("Process", "Settle"),
        HttpMethod = "POST",
        OnSuccess = "phoebe.showMessage('提交成功')"
    };
}

@section styles {
    @Styles.Render("~/Content/datepicker")
}

<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    @ViewBag.Title
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">主页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">财务结算</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">@ViewBag.Title</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>&nbsp;信息选择
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                @using (Ajax.BeginForm("Process", new { controller = "Settle" }, ajaxOpts, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-12">
                                @Html.ValidationMessageFor(model => model.ContractID, "", new { @class = "text-danger" })
                                @Html.ValidationMessageFor(model => model.DailyFee, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">客户类型</label>
                                    <div class="col-md-8">
                                        <select id="CustomerType" name="CustomerType" class="form-control">
                                            <option value="">-- 请选择 --</option>
                                            <option value="1">团体客户</option>
                                            <option value="2">零散客户</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">客户选择</label>
                                    <div class="col-md-8">
                                        <select id="CustomerID" name="CustomerID" class="form-control"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">合同选择</label>
                                    <div class="col-md-8">
                                        <select id="ContractID" name="ContractID" class="form-control" data-val="true" data-val-required="请选择合同"></select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">日期选择</label>
                                    <div class="col-md-9">
                                        <div class="input-group input-medium date-picker input-daterange" id="date-range-picker">
                                            <input type="text" class="form-control" name="DateFrom" data-val="true" data-val-required="请选择开始日期">
                                            <span class="input-group-addon">
                                                至
                                            </span>
                                            <input type="text" class="form-control" name="DateTo" data-val="true" data-val-required="请选择结束日期">
                                        </div>
                                        <!-- /input-group -->
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-4">日冷藏费(元/吨/天)</label>
                                    <div class="col-md-7">
                                        @Html.EditorFor(model => model.DailyFee, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-offset-2 col-md-2">
                                <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> 确定</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div id="process-result">

</div>
<!-- END PAGE CONTENT-->

@section Scripts {
    @Scripts.Render("~/bundles/datepicker")
    <script type="text/javascript">
        $(function () {
            phoebe.leftNavActive($('#menu-settle-index'));
            phoebe.initDatePicker($('#date-range-picker'), false);;

            var customerType = 0;
            var customerID = 0;


            $('#CustomerType').change(function () {
                customerType = $(this).val();

                $('#CustomerID').empty();
                $('#ContractID').empty();
                if (customerType == '')
                    return;

                $.getJSON('/Contract/GetCustomers', { type: customerType }, function (response) {
                    $('#CustomerID').append(" <option value=''>-- 请选择 --</option>");
                    $.each(response, function (i, item) {
                        $('#CustomerID').append("<option value='" + item.ID + "'>" + item.Name + "</option>");
                    });
                });
            });

            $('#CustomerID').change(function () {
                customerID = $(this).val();

                $('#ContractID').empty();
                if (customerID == '')
                    return;

                $.getJSON('/Contract/GetByCustomer', { customerType: customerType, customerId: customerID }, function (response) {
                    $('#ContractID').append(" <option value=''>-- 请选择 --</option>");
                    $.each(response, function (i, item) {
                        $('#ContractID').append("<option value='" + item.ID + "'>" + item.Name + "</option>");
                    });
                });
            });
        });
    </script>
}
