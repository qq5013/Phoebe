@model Phoebe.Model.Transfer

@{
    ViewBag.Title = "转户信息";
}

<!-- BEGIN PAGE HEADER-->
<h3 class="page-title">
    @ViewBag.Title
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Home")">主页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">冷库租赁</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">@ViewBag.Title</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-info-circle"></i>&nbsp;货品信息
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th style="width: 20%;">
                                属性
                            </th>
                            <th>
                                说明
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                原合同
                            </td>
                            <td>
                                @Model.OldCargo.Contract.Name ( @Model.OldCargo.Contract.Number )
                            </td>
                        </tr>
                        <tr>
                            <td>
                                新合同
                            </td>
                            <td>
                                @Model.NewCargo.Contract.Name ( @Model.NewCargo.Contract.Number )
                            </td>
                        </tr>
                        <tr>
                            <td>
                                原货品
                            </td>
                            <td>
                                <a href="@Url.Action("Details", new { controller = "Cargo", ID = Model.OldCargoID.ToString() })">@Model.OldCargo.Name</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                新货品
                            </td>
                            <td>
                                <a href="@Url.Action("Details", new { controller = "Cargo", ID = Model.NewCargoID.ToString() })">@Model.NewCargo.Name</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                一级分类
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.OldCargo.FirstCategory.Name)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                二级分类
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.OldCargo.SecondCategory.Name)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                三级分类
                            </td>
                            <td>
                                @if (Model.OldCargo.ThirdCategory != null)
                                {
                                    @Model.OldCargo.ThirdCategory.Name
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.TransferTime)
                            </td>
                            <td>
                                @Model.TransferTime.ToDateString()
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.ConfirmTime)
                            </td>
                            <td>
                                @Model.ConfirmTime.ToDateString()
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.UserID)
                            </td>
                            <td>
                                @Model.User.Name
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Remark)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Remark)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Status)
                            </td>
                            <td>
                                @(((EntityStatus)Model.Status).DisplayName())
                            </td>
                        </tr>
                    </tbody>
                </table>

                <hr />
                <p>
                    <a href="@Url.Action("Index", new { controller = "StockOut" })" class="btn btn-info"><i class="fa fa-list"></i>&nbsp;回到列表</a>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-info-circle"></i>&nbsp;转户信息
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                库位编号
                            </th>
                            <th>
                                转户数量
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TransferDetails)
                        {
                            <tr>
                                <td>
                                    @item.Warehouse.Number
                                </td>
                                <td>
                                    @item.Count
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT-->

@section Scripts {
    <script type="text/javascript">
        $(function () {
            phoebe.leftNavActive($('#menu-transfer-index'));
        });
    </script>
}